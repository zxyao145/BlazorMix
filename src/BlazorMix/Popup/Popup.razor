@namespace BlazorMix
@inherits PopupBase

@if (!_hasDestroyed)
{
    <div @ref="@Ref"
         class="@ClsPrefix @(Class?.ToString() ?? "")" 
         style="@Style?.ToString()">
        @if (ShowMask)
        {
            <AniMask Visible="@Visible"
                     DisableBodyScroll="false"
                     OnClick="@HandleOnMaskClick" 
                     Class="@MaskClass"
                     Style="@MaskStyle"
                     Container="@null"
            />
        }
        <AniDiv Name="@_animateName"
                In="@Visible"
                Class="@_classBuilder"
                Style="@BodyStyle"
                OnClick="@OnClick"
        >
            @if (ShowCloseButton)
            {
                <a @onclick="HandleCloserClick" 
                   @onclick:preventDefault
                   @onclick:stopPropagation
                   class="@ClsPrefix-close-icon bm-plain-anchor">
                    <CloserIcon />
                </a>
            }
        
            @ChildContent
        </AniDiv>
    </div>
}