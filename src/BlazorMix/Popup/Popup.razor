@namespace BlazorMix
@inherits BmDomComponentBase

<div class="@PrefixCls">
    @if (ShowMask)
    {
        <AniMask Visible="@Visible"
                 DisableBodyScroll="false"
                 OnClick="@HandleOnMaskClick" 
                 Class="@MaskClass"
                 Style="@MaskStyle"
                 Container="@null"
        />
    }
    <AniDiv Name="@_aimateName"
            In="@Visible"
            Class="@_classBuilder"
            Style="@Style"
            OnClick="@OnClick"
            >
        @if (ShowCloseButton)
        {
            <a @onclick="HandleCloserClick" 
               @onclick:preventDefault
               @onclick:stopPropagation
               class="@PrefixCls-close-icon bm-plain-anchor">
                <CloserIcon />
            </a>
        }
        
        @ChildContent
    </AniDiv>
</div>

