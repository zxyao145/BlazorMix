@namespace BlazorMix
@inherits PopupBase

<div @ref="@Ref"
     class="@PrefixCls @(Class?.ToString() ?? "")" 
     style="@Style?.ToString()"
     >
    @if (ShowMask)
    {
        <AniMask Visible="@Visible"
                 DisableBodyScroll="false"
                 OnClick="@HandleOnMaskClick" 
                 Class="@MaskClass"
                 Style="@MaskStyle"
                 Container="@null"
        />
    }
    <div class="@($"{PrefixCls}-wrap")">
        <AniDiv Name="@AniNames.Zoom"
                In="@Visible"
                Class="@_classBuilder.ToString()"
                Style="@BodyStyle"
                OnClick="@OnClick"
        >
            @if (ShowCloseButton)
            {
                <a @onclick="HandleCloserClick" 
                   @onclick:preventDefault
                   @onclick:stopPropagation
                   class="bm-popup-close-icon bm-plain-anchor">
                    <CloserIcon />
                </a>
            }
            @ChildContent
        </AniDiv>
    </div>
</div>