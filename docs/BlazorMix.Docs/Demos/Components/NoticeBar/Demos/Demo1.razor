    </NoticeBar>
</DemoBlock>

                
<DemoBlock Title="自定义">
    <Space Block Direction="BmDirection.Vertical">
        <SpaceItem>
            <NoticeBar Color="@NoticeBarColor.Default" Closeable>
                <Icon>
                    <IconPark.Attention />
                </Icon>
                <ChildContent>
                    自定义图标
                </ChildContent>
                <CloseIcon>
                    <IconPark.CloseOne />
                </CloseIcon>
            </NoticeBar>
        </SpaceItem>
        <SpaceItem>
            <NoticeBar Color="@NoticeBarColor.Alert">
                <ChildContent>
                    自定义右侧功能区
                </ChildContent>
                <Extra>
                    <Space>
                        <SpaceItem><span>查看详情</span></SpaceItem>   
                        <SpaceItem><span>关闭</span></SpaceItem>
                    </Space>
                </Extra>
            </NoticeBar>
        </SpaceItem>
    </Space>
</DemoBlock>
