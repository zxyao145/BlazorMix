        <SpaceItem>
            <NoticeBar Color="@NoticeBarColor.Default">
                默认
            </NoticeBar>
        </SpaceItem>
        <SpaceItem>
            <NoticeBar Color="@NoticeBarColor.Alert">
                警告
            </NoticeBar>
        </SpaceItem>
        <SpaceItem>
            <NoticeBar Color="@NoticeBarColor.Error">
                错误
            </NoticeBar>
        </SpaceItem>
        <SpaceItem>
            <NoticeBar Color="@NoticeBarColor.Info">
                信息
            </NoticeBar>
        </SpaceItem>
    </Space>
