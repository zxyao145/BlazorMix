
<DemoBlock>
    <Button OnClick="@(() => { _content = _textProps; _image = "";})">普通水印</Button>
    <Button OnClick="@(() => { _content = _rowsTextProps; _image = "";})">多行文字水印</Button>
    <Button OnClick="@(() => { _image = "https://gw.alipayobjects.com/zos/bmw-prod/59a18171-ae17-4fc5-93a0-2645f64a3aca.svg";})">图片水印</Button>
    <WaterMark Content="@_content"  
               Image="@_image" 
               ImageWidth="115"
               ImageHeight="36"
               />
</DemoBlock>

@code
{
    private const string _textProps = "Blazor Mix";

    private static List<string> _rowsTextProps = new List<string>()
    {
        "Blazor Mix",
        "Mobile UI library"
    };


    private OneOf.OneOf<string, List<string>> _content = _textProps;
    
    private string _image = "";
}
